<h1>My tasks</h1>
<%=link_to "Create a task", new_task_path %>

<% @tasks.each_with_index do |task, index| %>
<div>
  <% if task.completed %>
    <input type="checkbox" id="task-<%= index %>" name="task-<%= index %>" checked disabled />
  <% else %>
    <input type="checkbox" id="task-<%= index %>" name="task-<%= index %>" disabled />
  <% end %>
  <label for="task-<%= index %>"><%= link_to task.title, task_path(task) %></label>
</div>
<% end %>
