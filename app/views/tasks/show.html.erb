<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" id="task" name="task" checked disabled />
<% else %>
  <input type="checkbox" id="task" name="task" disabled />
<% end %>
<label for="task">The task is <%= @task.completed ? "completed" : "not completed" %></label>
<p></p>

<%= link_to "Back to list", root_path %>

<%= link_to "Edit task", edit_task_path(@task) %>
