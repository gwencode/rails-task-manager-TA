<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <input type="checkbox" id="task" name="task" checked disabled />
<% else %>
  <input type="checkbox" id="task" name="task" disabled />
<% end %>
<label for="task" class="fst-italic">The task is <%= @task.completed ? "completed" : "not completed" %></label>

<div class="my-3">
  <%= link_to "Edit task",
    edit_task_path(@task),
    class: "btn btn-primary"
  %>
</div>

<div class="my-3">
  <%= link_to raw("<i class='fa-solid fa-arrow-left'></i> Back to list"),
    root_path,
    class: "btn btn-light"
  %>
</div>
